%++++++++++++++++++++++++
% Langage Javascript
%++++++++++++++++++++++++

\lstdefinelanguage{Javascript}{
	keywords=[4]{exports, module, require, define}, % Mot clé du language
	keywords=[3]{var, function, new, if, else, while, null,true, return, for, this}, % Mot clé du language
	keywordstyle=[4]\bfseries\color{xmlOR}, % Style pour les mots clés
	keywordstyle=[3]\bfseries\color{jvBlue}, % Style pour les mots clés
	keywords=[2]{OpenLayers, Map, Bounds, TileCache, addLayer, zoomToMaxExtent, Control, DragPan, ZoomBox, Panel, addControls, addControl, getCenter, getResolution, calculateBounds, document, getElementsByTagName, length, checked, push,Layer}, % d'autre mots clés
	keywordstyle=[2]\bfseries\color{gray}, % Style pour les autres mots clé
	string=[b]{'}, % Paramètre pour définir où commence une chaine de caractère
	stringstyle=\bfseries\color{jvRed},% Style pour les chaines.
	comment=[l]{//},% Paramètre pour définir le commencement d'un commentaire
	commentstyle=\bfseries\color{violet},% Style pour les commentaire
	sensitive=true, % Pour la case
	showstringspaces=false
}

%++++++++++++++++++++++++
% Display JSON
%++++++++++++++++++++++++

\lstdefinelanguage{JSON}{
	literate=
		{:}{{{\color{jsonPunct}{:}}}}{1}
		{\{}{{{\color{jsonDelim}{\{}}}}{1}
		{\}}{{{\color{jsonDelim}{\}}}}}{1}
		{[}{{{\color{jsonDelim}{[}}}}{1}
		{]}{{{\color{jsonDelim}{]}}}}{1},
}
	

%++++++++++++++++++++++++
% Langage CSS
%++++++++++++++++++++++++

\lstdefinelanguage{CSS}{
	ndkeywords={width,nth,child,background-color,box, sizing,radius, border,shadow, height, display, float, text-align, vertical-align, 
			    padding, margin, position, clear, transition, delay, border-radius,-moz-border-radius,-ms-border-radius,-webkit-border-radius}, % d'autre mots clés
	ndkeywordstyle=\color{xmlOR},
	sensitive=true, % Pour la case
	comment=[l]{//},% Paramètre pour définir le commencement d'un commentaire
	commentstyle=\color{violet},% Style pour les commentaire
	keywordsprefix=@,
	keywordstyle=\color{dkgreen},
	showstringspaces=false
}
	
