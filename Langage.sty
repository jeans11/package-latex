\lstnewenvironment{xml}[1][]{
	\lstset{	
		language=XML,
		caption=#1,
		captionpos=b,
		abovecaptionskip=0.5cm,
		upquote=true,
		columns=flexible,
		frame=L,
		tabsize=4,
		basicstyle=\bfseries\ttfamily,
		% Chaîne de caractère entre les "
		morestring=[b]",
		stringstyle=\color{blue},
		% Attribut
		identifierstyle=\color{xmlOR},
		% Balise
		moredelim=[s][\color{xmlPurple}]{<}{\ },
		% Entête XML
		morecomment=[s]{<?}{?>},
		commentstyle=\bfseries\color{xmlGray},
		xleftmargin=0.5em,
		aboveskip=0.3cm,
		belowskip=0.3cm,
		showstringspaces=false,
		breaklines=true
	}
}{}

